{% extends "UEOChoixBundle::layout.html.twig" %}
{% block title %}Gestion des etudiants{% endblock %}

{% block body -%}
    <h1>Gestion des étudiants</h1><br>
     <ul class="nav">
        <li>
            <a href="{{ path('etudiant_new') }}">
                Ajouter un nouvel etudiant
            </a>
        </li>
    </ul>

    <table class="table table-bordered">
        <thead>
            <tr>
                <!--<th>Id</th>-->
                <th>Nom</th>
                <th>Prenom</th>
                <th>Année</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <!--<td><a href="{{ path('etudiant_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>-->
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.getParcours().intitule }}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('etudiant_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('etudiant_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                    <li>
                        <a href="{{ path('etudiant_supprimer', { 'id': entity.id }) }}">Supprimer</a>
                    </li>

                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
