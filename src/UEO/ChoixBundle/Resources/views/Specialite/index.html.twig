{% extends "UEOChoixBundle::layout.html.twig" %}
{% block title %}Gestion des spécialites{% endblock %}

{% block body -%}
    <h1>Gestion des specialites</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <!--<th>Id</th>-->
                <th>Intitule</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <!--<td><a href="{{ path('specialite_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>-->
                <td>{{ entity.intitule }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('specialite_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('specialite_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                    <li>
                        <a href="{{ path('specialite_supprimer', { 'id': entity.id }) }}">Supprimer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('specialite_new') }}">
                Ajouter une nouvelle spécialité
            </a>
        </li>
    </ul>
    {% endblock %}
